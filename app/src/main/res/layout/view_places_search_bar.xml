<org.wikipedia.views.WikiCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/searchContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="3dp"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:clickable="true"
    android:focusable="true"
    android:transitionName="@string/transition_search_bar"
    app:elevation="0dp"
    app:radius="22dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/searchBack"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackground"
            android:contentDescription="@string/search_hint"
            android:scaleType="center"
            app:srcCompat="@drawable/ic_arrow_back_black_24dp"
            app:tint="?attr/primary_color" />

        <TextView
            android:id="@+id/searchTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:theme="@style/P"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:layout_weight="1"
            android:text="@string/places_search_hint"
            android:textColor="?attr/secondary_color" />

        <ImageView
            android:id="@+id/searchCloseBtn"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackground"
            android:backgroundTint="?attr/primary_color"
            android:contentDescription="@string/places_search_hint"
            android:scaleType="center"
            android:visibility="gone"
            app:srcCompat="@drawable/ic_close_black_24dp" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/languageContainer"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackground"
            android:minWidth="48dp">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="24dp"
                android:minWidth="24dp"
                android:contentDescription="@null"
                app:layout_constraintBottom_toBottomOf="@+id/searchLangCode"
                app:layout_constraintEnd_toEndOf="@+id/searchLangCode"
                app:layout_constraintStart_toStartOf="@+id/searchLangCode"
                app:layout_constraintTop_toTopOf="@+id/searchLangCode"
                app:srcCompat="@drawable/lang_button_shape_border"
                app:tint="?attr/primary_color" />

            <TextView
                android:id="@+id/searchLangCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:theme="@style/H5"
                android:lineSpacingExtra="2sp"
                android:padding="3dp"
                android:textAllCaps="true"
                android:textColor="?attr/primary_color"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="en" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:id="@+id/tabsCountContainer"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackground"
            android:gravity="center"
            android:visibility="visible">

            <TextView
                android:id="@+id/searchTabsCountView"
                android:theme="@style/H5"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:background="@drawable/tab_counts_shape_border"
                android:backgroundTint="?attr/primary_color"
                android:gravity="center"
                android:textAlignment="center"
                android:textColor="?attr/primary_color"
                tools:text="3" />
        </LinearLayout>
    </LinearLayout>
</org.wikipedia.views.WikiCardView>
